<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/mdtp_date_picker_view_animator"
              android:gravity="center"
              android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

        <include layout="@layout/mdtp_date_picker_selected_date"/>
    </LinearLayout>

    <include
            layout="@layout/mdtp_date_picker_view_animator"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="0.5dp"
                  android:background="@color/mdtp_accent_color"

                  android:layout_marginBottom="2dp" android:layout_marginTop="4dp"/>
    <include layout="@layout/mdtp_done_button"/>

</LinearLayout>